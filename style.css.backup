.about-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: relative;
  background-color: white;
  margin: 5% auto;
  padding: 30px;
  width: 90%;
  max-width: 800px;
  border-radius: 10px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
}

.close-btn {
  position: absolute;
  right: 20px;
  top: 10px;
  font-size: 28px;
  cursor: pointer;
  color: #666;
}

.close-btn:hover {
  color: #000;
}

.about-section {
  margin: 25px 0;
}

.about-section h3 {
  color: #333;
  margin-bottom: 10px;
}

.about-section p {
  color: #666;
  line-height: 1.6;
}

.about-features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #eee;
}

.feature {
  text-align: center;
  padding: 20px;
}

.feature i {
  font-size: 2rem;
  color: #ff4444;
  margin-bottom: 15px;
}

.feature h4 {
  margin-bottom: 10px;
  color: #333;
}

.feature p {
  color: #666;
}

/* Responsive Design */
@media (max-width: 768px) {
  .modal-content {
      margin: 10% auto;
      padding: 20px;
  }

  .about-features {
      grid-template-columns: 1fr;
  }
}