* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: Arial, sans-serif;
}

nav {
  position: fixed;
  width: 100%;
  padding: 30px 50px;
  background: #f9e616;
  box-shadow: 0 2px 5px rgba(37, 24, 24, 0.1);
  display: flex;
  justify-content:space-between;
  align-items: center;
  z-index: 100;
}

.logo {
  font-size: 80px;
  font-weight: bold;
  color: #ff0000;
}

.nav-links {
  display: flex;
  list-style: none;
  align-items: center;
}
  background: #ff4444;
  color: white;
  border: none;
  cursor: pointer;
  margin-top: 20px;
  border-radius: 4px;
}
.navbar {
  background: white;
  padding: 1rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  position: relative;
}

.logo {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 24px;
  font-weight: bold;
}

.nav-buttons {
  display: flex;
  align-items: center;
  gap: 20px;
}

.nav-btn {
  background: none;
  border: none;
  padding: 10px 20px;
  cursor: pointer;
  font-size: 16px;
  position: relative;
  transition: color 0.3s;
}

.nav-btn:hover {
  color: #ff4444;
}

.signup-btn {
  background: #ff4444;
  color: white;
  border-radius: 4px;
}

.signup-btn:hover {
  background: #ff2222;
  color: white;
}

.info-panel {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  background: white;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  z-index: 1000;
}

.info-panel.active {
  display: block;
}

.info-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 2rem;
  margin-top: 1rem;
}

.info-item {
  text-align: center;
  padding: 1rem;
}

.info-item i {
  font-size: 2rem;
  color: #ff4444;
  margin-bottom: 1rem;
}

.shop-categories {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

.category ul {
  list-style: none;
  padding: 0;
}

.category ul li {
  margin: 10px 0;
}

.category ul li a {
  color: #666;
  text-decoration: none;
  transition: color 0.3s;
}

.category ul li a:hover {
  color: #ff4444;
}

.auth-form {
  max-width: 400px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.auth-form input {
  padding: 10px;
  border: 1px solid #dddddd;
  border-radius: 4px;
}

.auth-form button {
  background: #ff4444;
  color: white;
  border: none;
  padding: 10px;
  border-radius: 1cm;
  cursor: pointer;

}

.auth-form p {
  text-align: center;
  color: #666;
  cursor: pointer;
}

.auth-form p:hover {
  color: #ff4444;
}
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}

/* Top Banner */
.top-banner {
  background-color: #ffed00;
  padding: 15px 0;
  text-align: center;
}

.banner-content {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20px;
}

.banner-content h2 {
  font-size: 24px;
  color: #000;
}

.signup-btn {
  background: #ff1919;
  color: #0e0d0d;
  padding: 10px 20px;
  text-decoration: none;
  font-weight: bold;
  transition: opacity 0.3s;
}

.signup-btn:hover {
  opacity: 0.8;
 
}

/* Navigation */
.main-nav {
  display: flex;
  justify-content: space-around;
  padding: 40px;
  background: #fff;
}

.nav-section h3 {
  color: #000;
  margin-bottom: 20px;
  font-size: 16px;
}

.nav-section ul {
  list-style: none;
}

.nav-section ul li {
  margin: 10px 0;
}

.nav-section ul li a {
  color: #666;
  text-decoration: none;
  font-size: 14px;
  transition: color 0.3s;
}

.nav-section ul li a:hover {
  color: #000;
}

/* Footer */
footer {
  background: #282828;
  color: #fff;
  padding: 20px;
  text-align: center;
}

.footer-links {
  margin-bottom: 15px;
}

.footer-links a {
  color: #fff;
  text-decoration: none;
  margin: 0 15px;
  font-size: 14px;
}

.footer-links a:hover {
  text-decoration: underline;
}

.copyright {
  color: #999;
  font-size: 12px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .main-nav {
      flex-direction: column;
      padding: 20px;
  }

  .nav-section {
      margin-bottom: 30px;
    
  }

  .banner-content {
      flex-direction: column;
      padding: 0 20px;
  }

  .banner-content h2 {
      font-size: 18px;
  }
}
/* Base styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Root font size for responsive units */
:root {
  font-size: 16px;
}

/* Container for responsive width */
.container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

/* Responsive typography */
h1 { font-size: clamp(1.75rem, 3vw, 2.5rem); }
h2 { font-size: clamp(1.5rem, 2.5vw, 2rem); }
h3 { font-size: clamp(1.25rem, 2vw, 1.75rem); }
p { font-size: clamp(1rem, 1.5vw, 1.125rem); }

/* Responsive images */
img {
  max-width: 100%;
  height: auto;
}

/* Responsive grid system */
.grid {
  display: grid;
  gap: 20px;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

/* Navigation styles */
.nav-menu {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
}

/* Hamburger menu for mobile */
.menu-toggle {
  display: none;
}

/* Media Queries */

/* Tablets (768px and up) */
@media screen and (min-width: 768px) {
  .container {
      padding: 0 30px;
  }

  .grid {
      grid-template-columns: repeat(2, 1fr);
  }
}

/* Laptops (1024px and up) */
@media screen and (min-width: 1024px) {
  .grid {
      grid-template-columns: repeat(3, 1fr);
  }
}

/* Large screens (1200px and up) */
@media screen and (min-width: 1200px) {
  .grid {
      grid-template-columns: repeat(4, 1fr);
  }
}

/* Mobile devices (767px and below) */
@media screen and (max-width: 767px) {
  .nav-menu {
      flex-direction: column;
  }

  .menu-toggle {
      display: block;
  }

  .nav-links {
      display: none;
      width: 100%;
  }

  .nav-links.active {
      display: flex;
      flex-direction: column;
  }

  .grid {
      grid-template-columns: 1fr;
  }
}

/* Touch device optimizations */
@media (hover: none) {
  .nav-links a {
      padding: 15px;  /* Larger touch targets */
  }

  button {
      min-height: 44px;  /* Minimum touch target size */
  }
}

/* High-resolution screens */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  /* High-resolution specific styles */
  .logo img {
      transform: scale(0.5);
  }
}

/* Print styles */
@media print {
  .nav-menu,
  .footer {
      display: none;
  }
}

/* Orientation changes */
@media screen and (orientation: landscape) and (max-height: 500px) {
  .nav-menu {
      position: static;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  body {
      background-color: #121212;
      color: #ffffff;
  }
}

